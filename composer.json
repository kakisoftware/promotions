{
    "name": "kakisoftware/promotions",
    "description": "Promotions is a comprehensive Laravel solution for managing and implementing various promotional campaigns and discount strategies",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Wuhsien Yu",
            "email": "wuhsien.yu@kakisoftware.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "illuminate/database": "^10.35",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "*",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^8.17",
        "pestphp/pest": "^2.9"
    },
    "autoload": {
        "psr-4": {
            "KakiSoftware\\Promotions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Database\\Factories\\": "database/factories/"
        }
    },
    "scripts": {
        "lint": "pint",
        "test": [
            "@lint",
            "pest --profile --colors=always"
        ],
        "test:coverage": [
            "@lint",
            "pest --profile --coverage --coverage-html=coverage --colors=always"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
